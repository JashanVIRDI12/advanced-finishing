# ============================================================
# InsulPro Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================

# Site URL (used for sitemap, OpenGraph, canonical URLs)
NEXT_PUBLIC_SITE_URL=https://insulpro.com

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Maps API (for Locations page interactive map)
NEXT_PUBLIC_MAPS_API_KEY=your_google_maps_api_key_here

# Contact form endpoint (e.g. Resend, SendGrid, or your own API)
CONTACT_FORM_API_URL=https://api.resend.com/emails
CONTACT_FORM_API_KEY=your_email_api_key_here
CONTACT_FORM_TO_EMAIL=info@insulpro.com

